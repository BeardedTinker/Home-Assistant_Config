platform: template
sensors:
  nuki_lock_fw_version:
    unique_id: nuki_lock_fw_version
    friendly_name: "Nuki Lock FW Version"
    icon_template: mdi:numeric
    value_template: >
      {{ state_attr('sensor.nuki_bridge_endpoint_list','firmwareVersion') if states('sensor.nuki_bridge_endpoint_list') != "unknown" }}
